<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/circle_green"
            android:layout_marginStart="15dp"
            android:id="@+id/imageView" />

        <TextView
            android:id="@+id/courseView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:text="Mathematic"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView" />

        <TextView
            android:id="@+id/dateView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/courseView"
            android:layout_marginEnd="14dp"
            android:text="29-09-2017" />

        <TextView
            android:id="@+id/presentView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Present"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/courseView"
            android:layout_alignStart="@+id/courseView" />

        <TextView
            android:id="@+id/descriptionView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/presentView"
            android:layout_below="@+id/view"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:text="Student attend the course" />
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a9a7a7"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/presentView"
            android:layout_marginRight="5dp"
            android:layout_alignStart="@+id/presentView"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>